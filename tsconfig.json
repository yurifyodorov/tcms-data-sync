{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "prisma-clients/tcms-data-sync": ["prisma-clients/tcms-data-sync"]
    }
  },
  "include": ["src/**/*.ts"]
}